@model SmartExpenseTracker.Models.Expense

@{
    ViewData["Title"] = "Expense Details";
}

<style>
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .details-hero {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        border-radius: 20px;
        color: white;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 15px 35px rgba(79, 172, 254, 0.3);
    }

    .details-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .details-header {
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
        border-bottom: 1px solid #bbdefb;
        padding: 1.5rem;
    }

    .detail-item {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border-left: 4px solid #4facfe;
        transition: all 0.3s ease;
    }

    .detail-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    }

    .detail-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .detail-label i {
        color: #4facfe;
        margin-right: 0.5rem;
        width: 20px;
    }

    .detail-value {
        font-size: 1.1rem;
        color: #212529;
        margin: 0;
        font-weight: 500;
    }

    .amount-value {
        font-size: 2rem;
        font-weight: 700;
        color: #dc3545;
        text-shadow: 0 2px 4px rgba(220, 53, 69, 0.2);
    }

    .title-value {
        font-size: 1.5rem;
        font-weight: 600;
        color: #212529;
    }

    .category-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.75rem 1.5rem;
        border-radius: 25px;
        font-size: 1rem;
        font-weight: 600;
        color: white;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .category-badge i {
        margin-right: 0.5rem;
        font-size: 1.1rem;
    }

    .description-box {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border: 1px solid #dee2e6;
        border-radius: 12px;
        padding: 1.5rem;
        font-style: italic;
        color: #495057;
        line-height: 1.6;
    }

    .timestamp-info {
        background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
        border-radius: 12px;
        padding: 1rem;
        margin-bottom: 1.5rem;
        border-left: 4px solid #ffc107;
    }

    .timestamp-info small {
        color: #856404;
        font-weight: 500;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-top: 2rem;
    }

    .btn-info-gradient {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        border: none;
        border-radius: 12px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
    }

    .btn-info-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(79, 172, 254, 0.3);
        color: white;
    }

    .btn-warning-gradient {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border: none;
        border-radius: 12px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
    }

    .btn-warning-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(245, 87, 108, 0.3);
        color: white;
    }

    .btn-danger-gradient {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
        border: none;
        border-radius: 12px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
    }

    .btn-danger-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(255, 107, 107, 0.3);
        color: white;
    }

    .btn-secondary-gradient {
        background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
        border: none;
        border-radius: 12px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
    }

    .btn-secondary-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(108, 117, 125, 0.3);
        color: white;
    }

    .expense-id {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        display: inline-block;
    }

    @@media (max-width: 768px) {
        .details-hero {
            padding: 1.5rem;
            text-align: center;
        }

        .details-card {
            margin: 0 1rem;
        }

        .action-buttons {
            flex-direction: column;
        }

        .action-buttons .btn {
            width: 100%;
            margin-bottom: 0.5rem;
        }

        .amount-value {
            font-size: 1.5rem;
        }

        .title-value {
            font-size: 1.2rem;
        }
    }
</style>

<div class="container">
    <!-- Hero Section -->
    <div class="details-hero">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-2">
                    <i class="fas fa-eye me-3"></i>Expense Details
                </h1>
                <p class="mb-0 opacity-75">View complete information about this expense</p>
            </div>
            <div class="col-md-4 text-md-end">
                <span class="expense-id">ID: #@Model.Id</span>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="details-card">
                <div class="details-header">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="fas fa-receipt me-2 text-info"></i>Expense Information
                    </h5>
                    <small class="text-muted">Complete details of your expense record</small>
                </div>
                
                <div class="card-body p-4">
                    <!-- Timestamp Info -->
                    <div class="timestamp-info">
                        <small>
                            <i class="fas fa-clock me-2"></i>
                            <strong>Created:</strong> @Model.CreatedDate.ToString("MMM dd, yyyy 'at' h:mm tt")
                            @if (Model.ModifiedDate.HasValue)
                            {
                                <span class="ms-3">
                                    <i class="fas fa-edit me-2"></i>
                                    <strong>Last Modified:</strong> @Model.ModifiedDate.Value.ToString("MMM dd, yyyy 'at' h:mm tt")
                                </span>
                            }
                        </small>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-tag"></i>Expense Title
                                </div>
                                <p class="detail-value title-value">@Model.Title</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-dollar-sign"></i>Amount
                                </div>
                                <p class="detail-value amount-value">$@Model.Amount.ToString("N2")</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-calendar"></i>Date
                                </div>
                                <p class="detail-value">@Model.Date.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-list"></i>Category
                                </div>
                                <div>
                                    <span class="category-badge" style="background: linear-gradient(135deg, @Model.Category.Color 0%, @Model.Category.Color 100%);">
                                        <i class="@Model.Category.Icon"></i>@Model.Category.Name
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="fas fa-comment"></i>Description
                            </div>
                            <div class="description-box">
                                <p class="mb-0">@Model.Description</p>
                            </div>
                        </div>
                    }

                    <div class="action-buttons">
                        <a asp-action="Index" class="btn btn-secondary-gradient">
                            <i class="fas fa-arrow-left me-2"></i>Back to Expenses
                        </a>
                        <div class="d-flex gap-2 flex-wrap">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning-gradient">
                                <i class="fas fa-edit me-2"></i>Edit Expense
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger-gradient">
                                <i class="fas fa-trash me-2"></i>Delete Expense
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>