@model SmartExpenseTracker.Models.Expense

@{
    ViewData["Title"] = "Delete Expense";
}

<style>
    .delete-hero {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
        border-radius: 20px;
        color: white;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 15px 35px rgba(255, 107, 107, 0.3);
    }

    .delete-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        overflow: hidden;
        border: 2px solid #ff6b6b;
    }

    .delete-header {
        background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
        border-bottom: 1px solid #ffcdd2;
        padding: 1.5rem;
    }

    .warning-alert {
        background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
        border: 2px solid #ffc107;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% { box-shadow: 0 0 0 0 rgba(255, 193, 7, 0.4); }
        70% { box-shadow: 0 0 0 10px rgba(255, 193, 7, 0); }
        100% { box-shadow: 0 0 0 0 rgba(255, 193, 7, 0); }
    }

    .detail-item {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border-left: 4px solid #ff6b6b;
        transition: all 0.3s ease;
    }

    .detail-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    }

    .detail-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .detail-label i {
        color: #ff6b6b;
        margin-right: 0.5rem;
        width: 20px;
    }

    .detail-value {
        font-size: 1.1rem;
        color: #212529;
        margin: 0;
        font-weight: 500;
    }

    .amount-value {
        font-size: 2rem;
        font-weight: 700;
        color: #dc3545;
        text-shadow: 0 2px 4px rgba(220, 53, 69, 0.2);
    }

    .title-value {
        font-size: 1.5rem;
        font-weight: 600;
        color: #212529;
    }

    .category-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.75rem 1.5rem;
        border-radius: 25px;
        font-size: 1rem;
        font-weight: 600;
        color: white;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .category-badge i {
        margin-right: 0.5rem;
        font-size: 1.1rem;
    }

    .description-box {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border: 1px solid #dee2e6;
        border-radius: 12px;
        padding: 1.5rem;
        font-style: italic;
        color: #495057;
        line-height: 1.6;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-top: 2rem;
        align-items: center;
    }

    .btn-danger-gradient {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
        border: none;
        border-radius: 12px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-danger-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(255, 107, 107, 0.4);
        color: white;
    }

    .btn-danger-gradient:before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s;
    }

    .btn-danger-gradient:hover:before {
        left: 100%;
    }

    .btn-secondary-gradient {
        background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
        border: none;
        border-radius: 12px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
    }

    .btn-secondary-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(108, 117, 125, 0.3);
        color: white;
    }

    .expense-id {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        display: inline-block;
    }

    .danger-icon {
        font-size: 3rem;
        color: #ff6b6b;
        animation: shake 1s infinite;
    }

    @@keyframes shake {
        0%, 100% { transform: translateX(0); }
        10%, 30%, 50%, 70%, 90% { transform: translateX(-2px); }
        20%, 40%, 60%, 80% { transform: translateX(2px); }
    }

    @@media (max-width: 768px) {
        .delete-hero {
            padding: 1.5rem;
            text-align: center;
        }

        .delete-card {
            margin: 0 1rem;
        }

        .action-buttons {
            flex-direction: column;
        }

        .action-buttons .btn {
            width: 100%;
            margin-bottom: 0.5rem;
        }

        .amount-value {
            font-size: 1.5rem;
        }

        .title-value {
            font-size: 1.2rem;
        }

        .danger-icon {
            font-size: 2rem;
        }
    }
</style>

<div class="container">
    <!-- Hero Section -->
    <div class="delete-hero">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-2">
                    <i class="fas fa-exclamation-triangle me-3"></i>Delete Expense
                </h1>
                <p class="mb-0 opacity-75">Permanently remove this expense from your records</p>
            </div>
            <div class="col-md-4 text-md-end">
                <span class="expense-id">ID: #@Model.Id</span>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="delete-card">
                <div class="delete-header">
                    <h5 class="mb-0 fw-bold text-danger">
                        <i class="fas fa-trash me-2"></i>Confirm Deletion
                    </h5>
                    <small class="text-muted">Review the expense details before confirming deletion</small>
                </div>
                
                <div class="card-body p-4">
                    <!-- Warning Alert -->
                    <div class="warning-alert text-center">
                        <div class="danger-icon mb-3">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <h5 class="text-warning fw-bold mb-2">
                            <i class="fas fa-warning me-2"></i>Warning!
                        </h5>
                        <p class="mb-0 text-dark fw-semibold">
                            Are you sure you want to delete this expense? This action cannot be undone and will permanently remove all associated data.
                        </p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-tag"></i>Expense Title
                                </div>
                                <p class="detail-value title-value">@Model.Title</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-dollar-sign"></i>Amount
                                </div>
                                <p class="detail-value amount-value">$@Model.Amount.ToString("N2")</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-calendar"></i>Date
                                </div>
                                <p class="detail-value">@Model.Date.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-list"></i>Category
                                </div>
                                <div>
                                    <span class="category-badge" style="background: linear-gradient(135deg, @Model.Category.Color 0%, @Model.Category.Color 100%);">
                                        <i class="@Model.Category.Icon"></i>@Model.Category.Name
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="fas fa-comment"></i>Description
                            </div>
                            <div class="description-box">
                                <p class="mb-0">@Model.Description</p>
                            </div>
                        </div>
                    }

                    <form asp-action="Delete">
                        <div class="action-buttons">
                            <a asp-action="Index" class="btn btn-secondary-gradient">
                                <i class="fas fa-arrow-left me-2"></i>Cancel & Go Back
                            </a>
                            <button type="submit" class="btn btn-danger-gradient" onclick="return confirm('Are you absolutely sure you want to delete this expense? This action cannot be undone.');">
                                <i class="fas fa-trash me-2"></i>Yes, Delete Expense
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Add confirmation dialog with enhanced styling
    document.querySelector('.btn-danger-gradient').addEventListener('click', function(e) {
        if (!confirm('⚠️ FINAL WARNING ⚠️\n\nThis will permanently delete the expense:\n"' + '@Model.Title' + '"\nAmount: $@Model.Amount.ToString("N2")\n\nThis action CANNOT be undone!\n\nAre you absolutely sure?')) {
            e.preventDefault();
        }
    });

    // Add shake animation on hover for danger button
    document.querySelector('.btn-danger-gradient').addEventListener('mouseenter', function() {
        this.style.animation = 'shake 0.5s ease-in-out';
    });

    document.querySelector('.btn-danger-gradient').addEventListener('mouseleave', function() {
        this.style.animation = '';
    });
</script>