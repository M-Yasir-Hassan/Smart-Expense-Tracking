@model IEnumerable<SmartExpenseTracker.Models.Expense>

@{
    ViewData["Title"] = "Expenses";
}

<style>
    .expense-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        color: white;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 15px 35px rgba(102, 126, 234, 0.3);
    }

    .expense-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        margin-bottom: 1rem;
    }

    .expense-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }

    .expense-item {
        padding: 1.5rem;
        border-bottom: 1px solid #f8f9fa;
        transition: all 0.3s ease;
    }

    .expense-item:hover {
        background-color: rgba(102, 126, 234, 0.05);
    }

    .expense-item:last-child {
        border-bottom: none;
    }

    .expense-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        color: white;
        margin-right: 1rem;
    }

    .expense-amount {
        font-size: 1.25rem;
        font-weight: 700;
        color: #dc3545;
    }

    .expense-date {
        font-size: 0.875rem;
        color: #6c757d;
    }

    .expense-category {
        font-size: 0.75rem;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-weight: 600;
    }

    .filter-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .stats-summary {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-item {
        text-align: center;
        padding: 1rem;
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: #495057;
    }

    .stat-label {
        font-size: 0.875rem;
        color: #6c757d;
        margin-top: 0.25rem;
    }

    .action-btn {
        border-radius: 10px;
        padding: 0.5rem 1rem;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
    }

    .action-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .btn-primary-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-success-gradient {
        background: linear-gradient(135deg, #51cf66 0%, #40c057 100%);
        color: white;
    }

    .btn-warning-gradient {
        background: linear-gradient(135deg, #ffd93d 0%, #ff9500 100%);
        color: white;
    }

    .btn-danger-gradient {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
        color: white;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .empty-icon {
        font-size: 4rem;
        color: #dee2e6;
        margin-bottom: 1.5rem;
    }

    @@media (max-width: 768px) {
        .expense-hero {
            padding: 1.5rem;
            text-align: center;
        }

        .expense-item {
            padding: 1rem;
        }

        .expense-icon {
            width: 40px;
            height: 40px;
            font-size: 1rem;
        }

        .stat-item {
            padding: 0.5rem;
        }
    }
</style>

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="expense-hero">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-2">
                    <i class="fas fa-receipt me-3"></i>Expense Management
                </h1>
                <p class="mb-0 opacity-75">Track and manage all your expenses in one place</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Create" class="btn btn-light btn-lg action-btn">
                    <i class="fas fa-plus me-2"></i>Add New Expense
                </a>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="border-radius: 15px; border: none; box-shadow: 0 5px 15px rgba(25, 135, 84, 0.2);">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Summary -->
    <div class="stats-summary">
        <div class="row">
            <div class="col-md-3">
                <div class="stat-item">
                    <div class="stat-value">@Model.Count()</div>
                    <div class="stat-label">Total Expenses</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <div class="stat-value text-danger">$@Model.Sum(e => e.Amount).ToString("N2")</div>
                    <div class="stat-label">Total Amount</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <div class="stat-value">$@(Model.Any() ? Model.Average(e => e.Amount).ToString("N2") : "0.00")</div>
                    <div class="stat-label">Average Amount</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <div class="stat-value">@Model.GroupBy(e => e.CategoryId).Count()</div>
                    <div class="stat-label">Categories Used</div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Expenses List -->
        <div class="expense-card">
            <div class="card-header bg-white border-0 p-3">
                <div class="row align-items-center">
                    <div class="col">
                        <h5 class="mb-0 fw-bold">Recent Expenses</h5>
                        <small class="text-muted">@Model.Count() expense(s) found</small>
                    </div>
                    <div class="col-auto">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-sm btn-outline-secondary active">
                                <i class="fas fa-list me-1"></i>List
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-th-large me-1"></i>Grid
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            @foreach (var item in Model)
            {
                <div class="expense-item">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="expense-icon" style="background-color: @item.Category.Color;">
                                <i class="@item.Category.Icon"></i>
                            </div>
                        </div>
                        <div class="col">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="mb-1 fw-bold">@item.Title</h6>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <p class="mb-1 text-muted small">@item.Description</p>
                                    }
                                    <div class="d-flex align-items-center gap-3">
                                        <span class="expense-date">
                                            <i class="fas fa-calendar-alt me-1"></i>@item.Date.ToString("MMM dd, yyyy")
                                        </span>
                                        <span class="expense-category" style="background-color: @item.Category.Color; color: white;">
                                            @item.Category.Name
                                        </span>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <div class="expense-amount mb-2">$@item.Amount.ToString("N2")</div>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm action-btn btn-success-gradient" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm action-btn btn-warning-gradient" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm action-btn btn-danger-gradient" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            <!-- Total Footer -->
            <div class="card-footer bg-light border-0 p-3">
                <div class="row align-items-center">
                    <div class="col">
                        <strong class="text-muted">Total Expenses:</strong>
                    </div>
                    <div class="col-auto">
                        <span class="h5 mb-0 text-danger fw-bold">$@Model.Sum(e => e.Amount).ToString("N2")</span>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-receipt"></i>
            </div>
            <h4 class="text-muted mb-3">No expenses recorded yet</h4>
            <p class="text-muted mb-4">Start tracking your expenses by adding your first expense entry.</p>
            <a asp-action="Create" class="btn btn-lg action-btn btn-primary-gradient">
                <i class="fas fa-plus me-2"></i>Add Your First Expense
            </a>
        </div>
    }
</div>