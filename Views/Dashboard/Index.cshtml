    // Period button functionality
    document.querySelectorAll('.period-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            // Remove active class from siblings
            this.parentNode.querySelectorAll('.period-btn').forEach(sibling => {
                sibling.classList.remove('active');
            });
            // Add active class to clicked button
            this.classList.add('active');
            
            // Get the selected period
            const selectedPeriod = this.textContent;
            
            // Find the chart container to determine which chart to update
            const chartContainer = this.closest('.chart-card');
            const expenseChartContainer = chartContainer.querySelector('#expenseChart');
            const incomeChartContainer = chartContainer.querySelector('#incomeChart');
            
            // Update the appropriate chart
            if (expenseChartContainer && expenseChart) {
                updateChart(expenseChart, expenseData[selectedPeriod]);
            } else if (incomeChartContainer && incomeChart) {
                updateChart(incomeChart, incomeData[selectedPeriod]);
            }
        });
    });
