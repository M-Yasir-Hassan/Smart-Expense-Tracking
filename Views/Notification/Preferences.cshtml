@model SmartExpenseTracker.Models.NotificationPreference

@{
    ViewData["Title"] = "Notification Preferences";
}

<style>
    .preferences-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .preferences-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        padding: 2rem;
    }

    .preference-section {
        margin-bottom: 2rem;
        padding: 1.5rem;
        background: rgba(248, 250, 252, 0.8);
        border-radius: 12px;
        border-left: 4px solid #3b82f6;
    }

    .preference-section h4 {
        color: #1f2937;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .preference-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
        border-bottom: 1px solid rgba(229, 231, 235, 0.5);
    }

    .preference-item:last-child {
        border-bottom: none;
    }

    .preference-label {
        flex: 1;
        margin-right: 1rem;
    }

    .preference-label h6 {
        margin: 0 0 0.25rem 0;
        color: #374151;
        font-weight: 500;
    }

    .preference-label p {
        margin: 0;
        color: #6b7280;
        font-size: 0.875rem;
    }

    .form-switch {
        display: flex;
        align-items: center;
    }

    .form-switch .form-check-input {
        width: 3rem;
        height: 1.5rem;
        margin: 0;
        cursor: pointer;
    }

    .form-switch .form-check-input:checked {
        background-color: #3b82f6;
        border-color: #3b82f6;
    }

    .threshold-input {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .threshold-input input {
        width: 80px;
        text-align: center;
    }

    .time-input-group {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .time-input-group input {
        width: 120px;
    }

    .save-button {
        background: linear-gradient(135deg, #3b82f6, #1d4ed8);
        border: none;
        padding: 1rem 2rem;
        border-radius: 12px;
        color: white;
        font-weight: 600;
        transition: all 0.3s ease;
        width: 100%;
    }

    .save-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(59, 130, 246, 0.3);
    }

    .back-link {
        color: white;
        text-decoration: none;
        margin-bottom: 2rem;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
    }

    .back-link:hover {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
    }

    @@media (max-width: 768px) {
        .preferences-container {
            padding: 1rem 0;
        }
        
        .preferences-card {
            margin: 0 1rem;
            padding: 1.5rem;
        }
        
        .preference-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }
        
        .time-input-group {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>

<div class="preferences-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <a href="@Url.Action("Index")" class="back-link">
                    <i class="fas fa-arrow-left"></i>
                    Back to Notifications
                </a>

                <div class="text-center mb-4">
                    <h1 class="display-5 text-white mb-3">
                        <i class="fas fa-cog me-3"></i>Notification Preferences
                    </h1>
                    <p class="lead text-white-50">Customize how and when you receive notifications</p>
                </div>

                <div class="preferences-card">
                    <form asp-action="Preferences" method="post">
                        @Html.AntiForgeryToken()
                        
                        <!-- Budget Notifications -->
                        <div class="preference-section">
                            <h4><i class="fas fa-wallet me-2 text-primary"></i>Budget Notifications</h4>
                            
                            <div class="preference-item">
                                <div class="preference-label">
                                    <h6>Budget Warnings</h6>
                                    <p>Get notified when you reach a percentage of your budget</p>
                                </div>
                                <div class="form-switch">
                                    <input asp-for="EnableBudgetWarnings" class="form-check-input" type="checkbox" role="switch">
                                </div>
                            </div>

                            <div class="preference-item">
                                <div class="preference-label">
                                    <h6>Warning Threshold</h6>
                                    <p>Percentage of budget to trigger warning</p>
                                </div>
                                <div class="threshold-input">
                                    <input asp-for="BudgetWarningThreshold" class="form-control" type="number" min="1" max="100">
                                    <span>%</span>
                                </div>
                            </div>

                            <div class="preference-item">
                                <div class="preference-label">
                                    <h6>Budget Exceeded Alerts</h6>
                                    <p>Get notified when you exceed your budget (100%)</p>
                                </div>
                                <div class="form-switch">
                                    <input asp-for="EnableBudgetExceededAlerts" class="form-check-input" type="checkbox" role="switch">
                                </div>
                            </div>

                            <div class="preference-item">
                                <div class="preference-label">
                                    <h6>Critical Budget Alerts</h6>
                                    <p>Get urgent notifications when significantly over budget (125%+)</p>
                                </div>
                                <div class="form-switch">
                                    <input asp-for="EnableBudgetCriticalAlerts" class="form-check-input" type="checkbox" role="switch">
                                </div>
                            </div>
                        </div>

                        <!-- Activity Notifications -->
                        <div class="preference-section">
                            <h4><i class="fas fa-activity me-2 text-success"></i>Activity Notifications</h4>
                            
                            <div class="preference-item">
                                <div class="preference-label">
                                    <h6>Expense Notifications</h6>
                                    <p>Get notified when new expenses are added</p>
                                </div>
                                <div class="form-switch">
                                    <input asp-for="EnableExpenseNotifications" class="form-check-input" type="checkbox" role="switch">
                                </div>
                            </div>

                            <div class="preference-item">
                                <div class="preference-label">
                                    <h6>Monthly Reports</h6>
                                    <p>Receive monthly financial summary reports</p>
                                </div>
                                <div class="form-switch">
                                    <input asp-for="EnableMonthlyReports" class="form-check-input" type="checkbox" role="switch">
                                </div>
                            </div>
                        </div>

                        <!-- Delivery Preferences -->
                        <div class="preference-section">
                            <h4><i class="fas fa-paper-plane me-2 text-info"></i>Delivery Preferences</h4>
                            
                            <div class="preference-item">
                                <div class="preference-label">
                                    <h6>In-App Notifications</h6>
                                    <p>Show notifications within the application</p>
                                </div>
                                <div class="form-switch">
                                    <input asp-for="EnableInAppNotifications" class="form-check-input" type="checkbox" role="switch">
                                </div>
                            </div>

                            <div class="preference-item">
                                <div class="preference-label">
                                    <h6>Email Notifications</h6>
                                    <p>Send notifications to your email address</p>
                                </div>
                                <div class="form-switch">
                                    <input asp-for="EnableEmailNotifications" class="form-check-input" type="checkbox" role="switch">
                                </div>
                            </div>
                        </div>

                        <!-- Quiet Hours -->
                        <div class="preference-section">
                            <h4><i class="fas fa-moon me-2 text-secondary"></i>Quiet Hours</h4>
                            
                            <div class="preference-item">
                                <div class="preference-label">
                                    <h6>Enable Quiet Hours</h6>
                                    <p>Suppress notifications during specified hours</p>
                                </div>
                                <div class="form-switch">
                                    <input asp-for="EnableQuietHours" class="form-check-input" type="checkbox" role="switch">
                                </div>
                            </div>

                            <div class="preference-item">
                                <div class="preference-label">
                                    <h6>Quiet Hours Schedule</h6>
                                    <p>Set the time range for quiet hours</p>
                                </div>
                                <div class="time-input-group">
                                    <div>
                                        <label class="form-label">Start Time</label>
                                        <input asp-for="QuietHoursStart" class="form-control" type="time">
                                    </div>
                                    <div>
                                        <label class="form-label">End Time</label>
                                        <input asp-for="QuietHoursEnd" class="form-control" type="time">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="save-button">
                                <i class="fas fa-save me-2"></i>Save Preferences
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Enable/disable threshold input based on warning checkbox
    document.addEventListener('DOMContentLoaded', function() {
        const warningCheckbox = document.querySelector('input[name="EnableBudgetWarnings"]');
        const thresholdInput = document.querySelector('input[name="BudgetWarningThreshold"]');
        
        function toggleThreshold() {
            thresholdInput.disabled = !warningCheckbox.checked;
            thresholdInput.parentElement.style.opacity = warningCheckbox.checked ? '1' : '0.5';
        }
        
        warningCheckbox.addEventListener('change', toggleThreshold);
        toggleThreshold(); // Initial state
        
        // Enable/disable quiet hours inputs
        const quietHoursCheckbox = document.querySelector('input[name="EnableQuietHours"]');
        const timeInputs = document.querySelectorAll('input[name="QuietHoursStart"], input[name="QuietHoursEnd"]');
        
        function toggleQuietHours() {
            timeInputs.forEach(input => {
                input.disabled = !quietHoursCheckbox.checked;
                input.parentElement.style.opacity = quietHoursCheckbox.checked ? '1' : '0.5';
            });
        }
        
        quietHoursCheckbox.addEventListener('change', toggleQuietHours);
        toggleQuietHours(); // Initial state
    });
</script>