@model List<SmartExpenseTracker.Models.Notification>

@{
    ViewData["Title"] = "Notifications";
}

<style>
    .notification-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .notification-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        margin-bottom: 1rem;
        transition: all 0.3s ease;
    }

    .notification-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
    }

    .notification-item {
        padding: 1.5rem;
        border-left: 4px solid transparent;
        transition: all 0.3s ease;
    }

    .notification-item.unread {
        background: rgba(59, 130, 246, 0.05);
        border-left-color: #3b82f6;
    }

    .notification-item.priority-critical {
        border-left-color: #ef4444;
        background: rgba(239, 68, 68, 0.05);
    }

    .notification-item.priority-high {
        border-left-color: #f59e0b;
        background: rgba(245, 158, 11, 0.05);
    }

    .notification-item.priority-medium {
        border-left-color: #10b981;
        background: rgba(16, 185, 129, 0.05);
    }

    .notification-item.priority-low {
        border-left-color: #6b7280;
        background: rgba(107, 114, 128, 0.05);
    }

    .notification-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .notification-title {
        font-weight: 600;
        color: #1f2937;
        margin: 0;
    }

    .notification-time {
        font-size: 0.875rem;
        color: #6b7280;
    }

    .notification-message {
        color: #4b5563;
        margin-bottom: 1rem;
        line-height: 1.6;
    }

    .notification-actions {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .btn-notification {
        padding: 0.375rem 0.75rem;
        border-radius: 8px;
        font-size: 0.875rem;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-mark-read {
        background: #10b981;
        color: white;
    }

    .btn-mark-read:hover {
        background: #059669;
    }

    .btn-delete {
        background: #ef4444;
        color: white;
    }

    .btn-delete:hover {
        background: #dc2626;
    }

    .notification-type-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .type-budgetwarning { background: #fef3c7; color: #92400e; }
    .type-budgetexceeded { background: #fee2e2; color: #991b1b; }
    .type-budgetcritical { background: #fecaca; color: #7f1d1d; }
    .type-expenseadded { background: #dbeafe; color: #1e40af; }
    .type-budgetcreated { background: #d1fae5; color: #065f46; }
    .type-monthlyreport { background: #e0e7ff; color: #3730a3; }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #6b7280;
    }

    .empty-state i {
        font-size: 4rem;
        margin-bottom: 1rem;
        color: #d1d5db;
    }

    .filter-tabs {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .filter-tab {
        padding: 0.75rem 1.5rem;
        background: rgba(255, 255, 255, 0.9);
        border: 2px solid transparent;
        border-radius: 12px;
        color: #4b5563;
        text-decoration: none;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .filter-tab.active {
        background: white;
        border-color: #3b82f6;
        color: #3b82f6;
    }

    .filter-tab:hover {
        background: white;
        color: #3b82f6;
        text-decoration: none;
    }

    @@media (max-width: 768px) {
        .notification-container {
            padding: 1rem 0;
        }
        
        .notification-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }
        
        .notification-actions {
            justify-content: flex-start;
        }
        
        .filter-tabs {
            justify-content: center;
        }
    }
</style>

<div class="notification-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="text-center mb-5">
                    <h1 class="display-4 text-white mb-3">
                        <i class="fas fa-bell me-3"></i>Notifications
                    </h1>
                    <p class="lead text-white-50">Stay updated with your financial activities</p>
                </div>

                <div class="filter-tabs">
                    <a href="@Url.Action("Index")" class="filter-tab @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                        <i class="fas fa-list me-2"></i>All Notifications
                    </a>
                    <a href="@Url.Action("Unread")" class="filter-tab @(ViewContext.RouteData.Values["action"]?.ToString() == "Unread" ? "active" : "")">
                        <i class="fas fa-circle me-2"></i>Unread Only
                    </a>
                    <a href="@Url.Action("Preferences")" class="filter-tab">
                        <i class="fas fa-cog me-2"></i>Preferences
                    </a>
                </div>

                @if (Model.Any())
                {
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-white">
                            <i class="fas fa-info-circle me-2"></i>
                            @Model.Count notification(s) | @Model.Count(n => !n.IsRead) unread
                        </span>
                        @if (Model.Any(n => !n.IsRead))
                        {
                            <form asp-action="MarkAllAsRead" method="post" style="display: inline;">
                                <button type="submit" class="btn btn-outline-light btn-sm">
                                    <i class="fas fa-check-double me-2"></i>Mark All Read
                                </button>
                            </form>
                        }
                    </div>

                    @foreach (var notification in Model)
                    {
                        <div class="notification-card">
                            <div class="notification-item @(!notification.IsRead ? "unread" : "") priority-@notification.Priority.ToString().ToLower()">
                                <div class="notification-header">
                                    <div>
                                        <h5 class="notification-title">
                                            @if (!notification.IsRead)
                                            {
                                                <i class="fas fa-circle text-primary me-2" style="font-size: 0.5rem;"></i>
                                            }
                                            @notification.Title
                                        </h5>
                                        <span class="notification-type-badge type-@notification.Type.ToString().ToLower()">
                                            @notification.Type.ToString().Replace("Budget", "Budget ").Replace("Expense", "Expense ")
                                        </span>
                                    </div>
                                    <div class="notification-time">
                                        <i class="fas fa-clock me-1"></i>
                                        @notification.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                    </div>
                                </div>

                                <div class="notification-message">
                                    @notification.Message
                                </div>

                                <div class="notification-actions">
                                    <a href="@Url.Action("Details", new { id = notification.Id })" class="btn btn-notification" style="background: #3b82f6; color: white;">
                                        <i class="fas fa-eye me-1"></i>View Details
                                    </a>
                                    
                                    @if (!notification.IsRead)
                                    {
                                        <button onclick="markAsRead(@notification.Id)" class="btn btn-notification btn-mark-read">
                                            <i class="fas fa-check me-1"></i>Mark Read
                                        </button>
                                    }
                                    
                                    <button onclick="deleteNotification(@notification.Id)" class="btn btn-notification btn-delete">
                                        <i class="fas fa-trash me-1"></i>Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="notification-card">
                        <div class="empty-state">
                            <i class="fas fa-bell-slash"></i>
                            <h3>No Notifications</h3>
                            <p>You're all caught up! No notifications to display.</p>
                            <a href="@Url.Action("Preferences")" class="btn btn-primary">
                                <i class="fas fa-cog me-2"></i>Configure Notifications
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    function markAsRead(notificationId) {
        fetch('@Url.Action("MarkAsRead")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            },
            body: JSON.stringify({ id: notificationId })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            }
        })
        .catch(error => console.error('Error:', error));
    }

    function deleteNotification(notificationId) {
        if (confirm('Are you sure you want to delete this notification?')) {
            fetch('@Url.Action("Delete")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: JSON.stringify({ id: notificationId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                }
            })
            .catch(error => console.error('Error:', error));
        }
    }

    // Auto-refresh notification count every 30 seconds
    setInterval(function() {
        fetch('@Url.Action("GetUnreadCount")')
            .then(response => response.json())
            .then(data => {
                const badge = document.querySelector('.notification-badge');
                if (badge) {
                    badge.textContent = data.count;
                    badge.style.display = data.count > 0 ? 'inline' : 'none';
                }
            })
            .catch(error => console.error('Error:', error));
    }, 30000);
</script>