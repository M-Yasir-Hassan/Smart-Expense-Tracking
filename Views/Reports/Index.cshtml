@model SmartExpenseTracker.ViewModels.ReportsViewModel

@{
    ViewData["Title"] = "Financial Reports & Analytics";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="text-center mb-4">
        <img src="https://img.icons8.com/color/64/000000/analytics.png" alt="Analytics" class="mb-3">
        <h2 class="text-primary mb-2">Financial Reports & Analytics</h2>
        <p class="text-muted">Comprehensive insights into your financial performance for @Model.CurrentMonth</p>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card summary-card border-0 shadow-sm h-100" style="border-radius: 20px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body text-white text-center p-4">
                    <img src="https://img.icons8.com/color/48/ffffff/money-bag.png" alt="Income" class="mb-3">
                    <h3 class="mb-2">@Model.TotalIncome.ToString("C")</h3>
                    <p class="mb-0 opacity-75">Total Income</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card summary-card border-0 shadow-sm h-100" style="border-radius: 20px; background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);">
                <div class="card-body text-white text-center p-4">
                    <img src="https://img.icons8.com/color/48/ffffff/spending.png" alt="Expenses" class="mb-3">
                    <h3 class="mb-2">@Model.TotalExpenses.ToString("C")</h3>
                    <p class="mb-0 opacity-75">Total Expenses</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card summary-card border-0 shadow-sm h-100" style="border-radius: 20px; background: linear-gradient(135deg, @(Model.NetIncome >= 0 ? "#51cf66, #40c057" : "#ff6b6b, #ee5a52") 100%);">
                <div class="card-body text-white text-center p-4">
                    <img src="https://img.icons8.com/color/48/ffffff/@(Model.NetIncome >= 0 ? "profit" : "loss").png" alt="Net Income" class="mb-3">
                    <h3 class="mb-2">@Model.NetIncome.ToString("C")</h3>
                    <p class="mb-0 opacity-75">Net Income</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card summary-card border-0 shadow-sm h-100" style="border-radius: 20px; background: linear-gradient(135deg, #ffd93d 0%, #ff6b35 100%);">
                <div class="card-body text-white text-center p-4">
                    <img src="https://img.icons8.com/color/48/ffffff/savings.png" alt="Savings Rate" class="mb-3">
                    <h3 class="mb-2">@Model.SavingsRate.ToString("F1")%</h3>
                    <p class="mb-0 opacity-75">Savings Rate</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row mb-4">
        <!-- Expense Breakdown Chart -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-lg border-0" style="border-radius: 20px;">
                <div class="card-header bg-gradient-primary text-white" style="border-radius: 20px 20px 0 0;">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-pie me-2"></i>Expense Breakdown
                    </h5>
                </div>
                <div class="card-body p-4">
                    @if (Model.ExpensesByCategory.Any())
                    {
                        <canvas id="expenseChart" width="400" height="300"></canvas>
                        <div class="mt-3">
                            @foreach (var category in Model.ExpensesByCategory.Take(5))
                            {
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div class="d-flex align-items-center">
                                        <div class="category-color-box me-2" style="background-color: @category.Color;"></div>
                                <span class="fw-bold">@category.CategoryName</span>
                                    </div>
                                    <div class="text-end">
                                        <div class="fw-bold">@category.Amount.ToString("C")</div>
                                        <small class="text-muted">@category.Percentage.ToString("F1")%</small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <img src="https://img.icons8.com/color/64/000000/no-data.png" alt="No Data" class="mb-3">
                            <p class="text-muted">No expense data available for this period</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Income Breakdown Chart -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-lg border-0" style="border-radius: 20px;">
                <div class="card-header bg-gradient-success text-white" style="border-radius: 20px 20px 0 0;">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-donut me-2"></i>Income Sources
                    </h5>
                </div>
                <div class="card-body p-4">
                    @if (Model.IncomeByCategory.Any())
                    {
                        <canvas id="incomeChart" width="400" height="300"></canvas>
                        <div class="mt-3">
                            @foreach (var category in Model.IncomeByCategory.Take(5))
                            {
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div class="d-flex align-items-center">
                                        <div class="category-color-box me-2" style="background-color: @category.Color;"></div>
                                <span class="fw-bold">@category.CategoryName</span>
                                    </div>
                                    <div class="text-end">
                                        <div class="fw-bold">@category.Amount.ToString("C")</div>
                                        <small class="text-muted">@category.Percentage.ToString("F1")%</small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <img src="https://img.icons8.com/color/64/000000/no-data.png" alt="No Data" class="mb-3">
                            <p class="text-muted">No income data available for this period</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Monthly Trends Chart -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-lg border-0" style="border-radius: 20px;">
                <div class="card-header bg-gradient-info text-white" style="border-radius: 20px 20px 0 0;">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>6-Month Financial Trend
                    </h5>
                </div>
                <div class="card-body p-4">
                    <canvas id="trendChart" width="800" height="400"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Budget Analysis -->
    @if (Model.BudgetAnalysis.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-lg border-0" style="border-radius: 20px;">
                    <div class="card-header bg-gradient-warning text-white" style="border-radius: 20px 20px 0 0;">
                        <h5 class="mb-0">
                            <i class="fas fa-bullseye me-2"></i>Budget Performance
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row">
                            @foreach (var budget in Model.BudgetAnalysis)
                            {
                                <div class="col-lg-6 col-xl-4 mb-4">
                                    <div class="card border-0 shadow-sm h-100" style="border-radius: 15px;">
                                        <div class="card-body p-3">
                                            <div class="d-flex justify-content-between align-items-center mb-3">
                                                <h6 class="mb-0 fw-bold">@budget.BudgetName</h6>
                                                <span class="badge bg-@budget.StatusClass">@budget.StatusText</span>
                                            </div>
                                            
                                            <div class="mb-3">
                                                <div class="d-flex justify-content-between mb-1">
                                                    <small>Progress</small>
                                                    <small>@budget.PercentageUsed.ToString("F1")%</small>
                                                </div>
                                                <div class="progress" style="height: 8px;">
                                                    <div class="progress-bar bg-@budget.StatusClass" 
                                                         style="width: @Math.Min(budget.PercentageUsed, 100)%"></div>
                                                </div>
                                            </div>
                                            
                                            <div class="row text-center">
                                                <div class="col-4">
                                                    <div class="text-muted small">Budget</div>
                                                    <div class="fw-bold">@budget.BudgetAmount.ToString("C")</div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="text-muted small">Spent</div>
                                                    <div class="fw-bold text-danger">@budget.SpentAmount.ToString("C")</div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="text-muted small">Remaining</div>
                                                    <div class="fw-bold @(budget.RemainingAmount >= 0 ? "text-success" : "text-danger")">
                                                        @budget.RemainingAmount.ToString("C")
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Action Buttons -->
    <div class="text-center mb-4">
        <div class="btn-group" role="group">
            <a asp-action="Detailed" class="btn btn-primary btn-lg">
                <i class="fas fa-search me-2"></i>Detailed Reports
            </a>
            <a asp-action="Export" class="btn btn-success btn-lg">
                <i class="fas fa-download me-2"></i>Export Data
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Expense Pie Chart
        @if (Model.ExpensesByCategory.Any())
        {
            <text>
            const expenseCtx = document.getElementById('expenseChart').getContext('2d');
            new Chart(expenseCtx, {
                type: 'doughnut',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.ExpensesByCategory.Take(5).Select(c => $"'{c.CategoryName}'")))],
                    datasets: [{
                        data: [@string.Join(",", Model.ExpensesByCategory.Take(5).Select(c => c.Amount))],
                        backgroundColor: [@Html.Raw(string.Join(",", Model.ExpensesByCategory.Take(5).Select(c => $"'{c.Color}'")))],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
            </text>
        }

        // Income Pie Chart
        @if (Model.IncomeByCategory.Any())
        {
            <text>
            const incomeCtx = document.getElementById('incomeChart').getContext('2d');
            new Chart(incomeCtx, {
                type: 'doughnut',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.IncomeByCategory.Take(5).Select(c => $"'{c.CategoryName}'")))],
                    datasets: [{
                        data: [@string.Join(",", Model.IncomeByCategory.Take(5).Select(c => c.Amount))],
                        backgroundColor: [@Html.Raw(string.Join(",", Model.IncomeByCategory.Take(5).Select(c => $"'{c.Color}'")))],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
            </text>
        }

        // Monthly Trend Line Chart
        const trendCtx = document.getElementById('trendChart').getContext('2d');
        new Chart(trendCtx, {
            type: 'line',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.MonthlyTrends.Select(t => $"'{t.Month}'")))],
                datasets: [{
                    label: 'Income',
                    data: [@string.Join(",", Model.MonthlyTrends.Select(t => t.Income))],
                    borderColor: '#51cf66',
                    backgroundColor: 'rgba(81, 207, 102, 0.1)',
                    tension: 0.4,
                    fill: true
                }, {
                    label: 'Expenses',
                    data: [@string.Join(",", Model.MonthlyTrends.Select(t => t.Expenses))],
                    borderColor: '#ff6b6b',
                    backgroundColor: 'rgba(255, 107, 107, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return 'Â£' + value.toLocaleString();
                            }
                        }
                    }
                }
            }
        });
    </script>
}

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .bg-gradient-success {
        background: linear-gradient(135deg, #51cf66 0%, #40c057 100%);
    }
    
    .bg-gradient-info {
        background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
    }
    
    .bg-gradient-warning {
        background: linear-gradient(135deg, #ffd93d 0%, #ff6b35 100%);
    }
    
    .summary-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .summary-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.2) !important;
    }
    
    .card {
        border: none;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    
    .category-color-box {
        width: 16px;
        height: 16px;
        border-radius: 50%;
        display: inline-block;
    }
    
    .btn-lg {
        border-radius: 10px;
        padding: 12px 30px;
    }
    
    canvas {
        max-height: 300px;
    }
</style>